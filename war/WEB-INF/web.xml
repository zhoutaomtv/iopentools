<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.appspot.iopentools.servlet.IopentoolsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GUIDCreator</servlet-name>
    <servlet-class>com.appspot.iopentools.servlet.GUIDCreatorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>OnlineNotes</servlet-name>
    <servlet-class>com.appspot.iopentools.servlet.OnlineNotesServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/greet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GUIDCreator</servlet-name>
    <url-pattern>/guidcreator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OnlineNotes</servlet-name>
    <url-pattern>/onlinenotes</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
